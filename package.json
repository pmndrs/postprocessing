{
	"name": "postprocessing",
	"version": "7.0.0-beta.11",
	"description": "An advanced post processing library for three.js.",
	"homepage": "https://github.com/pmndrs/postprocessing",
	"license": "Zlib",
	"type": "module",
	"sideEffects": false,
	"main": "./dist/index.js",
	"types": "./types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"keywords": [
		"effect",
		"gbuffer",
		"filter",
		"pass",
		"pipeline",
		"post",
		"processing",
		"rendering",
		"rendertexture",
		"rtt",
		"three",
		"webgl",
		"webgpu"
	],
	"author": {
		"name": "Raoul van RÃ¼schen",
		"email": "vanruesc@outlook.de"
	},
	"repository": {
		"url": "git+https://github.com/pmndrs/postprocessing.git"
	},
	"bugs": {
		"url": "https://github.com/pmndrs/postprocessing/issues"
	},
	"files": [
		"./dist"
	],
	"publishConfig": {
		"tag": "beta"
	},
	"ava": {
		"failFast": true,
		"files": [
			"test/**/*.js"
		]
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"esbuild",
			"hugo-bin"
		]
	},
	"scripts": {
		"ava": "ava",
		"build": "run-p build:css build:js:min build:dts",
		"build:css": "sass --no-source-map -I manual/assets/css/src/values manual/assets/css/src:manual/assets/css/dist",
		"build:js": "node esbuild",
		"build:js:min": "node esbuild -m",
		"build:dts": "tsc -p tsconfig.d.json",
		"clean": "del-cli dist temp public manual/resources manual/assets/css/dist manual/assets/js/dist",
		"deploy": "run-s postcss hugo gzip",
		"doc": "typedoc --plugin typedoc-plugin-mdn-links",
		"gzip": "gzipper c \"public\"",
		"hugo": "hugo -s manual --minify",
		"lint": "run-p lint:*",
		"lint:css": "stylelint --fix manual/assets/css/src",
		"lint:js": "eslint --fix src manual/assets/js/src",
		"lint:tsc": "tsc --noEmit",
		"postcss": "postcss manual/assets/css/dist/index.css -o manual/assets/css/dist/index.css -c manual",
		"prepublishOnly": "npm test",
		"prewatch": "run-s clean build:css build:js",
		"start": "hugo server -s manual -e development",
		"test": "run-s lint clean build ava doc",
		"watch": "run-p watch:* start",
		"watch:css": "sass --no-source-map -I manual/assets/css/src/values manual/assets/css/src:manual/assets/css/dist -w",
		"watch:tsc": "tsc --noEmit --watch --preserveWatchOutput",
		"watch:js": "node esbuild -w"
	},
	"peerDependencies": {
		"three": ">= 0.174.0 < 0.177.0"
	},
	"devDependencies": {
		"@tweakpane/core": "2.x.x",
		"@tweakpane/plugin-essentials": "0.x.x",
		"@types/node": "22.x.x",
		"@types/three": "0.x.x",
		"@typescript-eslint/eslint-plugin": "8.x.x",
		"@typescript-eslint/parser": "8.x.x",
		"autoprefixer": "10.x.x",
		"ava": "6.x.x",
		"cssnano": "7.x.x",
		"del-cli": "6.x.x",
		"esbuild": "0.25.x",
		"esbuild-plugin-glsl": "1.x.x",
		"eslint": "9.x.x",
		"eslint-config-aether": "2.x.x",
		"gzipper": "8.x.x",
		"hugo-bin": "0.x.x",
		"npm-run-all": "4.x.x",
		"postcss": "8.x.x",
		"postcss-cli": "11.x.x",
		"postcss-preset-env": "10.x.x",
		"sass": "1.x.x",
		"spatial-controls": "6.x.x",
		"stylelint": "16.x.x",
		"stylelint-config-standard-scss": "15.x.x",
		"stylelint-order": "7.x.x",
		"tiny-glob": "0.x.x",
		"tslib": "2.x.x",
		"tweakpane": "4.x.x",
		"typedoc": "0.x.x",
		"typedoc-plugin-mdn-links": "5.x.x",
		"typescript": "5.8.x"
	}
}
