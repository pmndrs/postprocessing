{
	"include": [
		"./*.js",
		"./src",
		"./manual/assets/js/src",
		"./manual/assets/js/libs",
		"./test"
	],
	"compilerOptions": {
		// File Layout
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"postprocessing": ["./src/index.js"],
			"temp": ["./temp"]
		},
		// Environment Settings
		"moduleResolution": "bundler",
		"module": "es2022",
		"target": "es2022",
		// Style Options
		"noImplicitReturns": true,
		"noImplicitOverride": false,
		// Other
		"noUncheckedSideEffectImports": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": false,
		"skipLibCheck": true
	}
}
