{
	"include": ["./*.js", "./src", "./manual/assets/js/src", "./test"],
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"noImplicitOverride": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"postprocessing": ["./src/index.js"],
			"temp": ["./temp"]
		}
	}
}
